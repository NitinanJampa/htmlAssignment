<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        <hr />
        {{#if courses}}
        <div class="table-responsive">
            <table class="table2">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                        <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                        <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">remove</td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
            {{/if}}
        </div>
    </div>